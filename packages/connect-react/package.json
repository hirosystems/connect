{
  "name": "@stacks/connect-react",
  "version": "22.0.0",
  "license": "MIT",
  "prettier": "@stacks/prettier-config",
  "scripts": {
    "build": "concurrently 'yarn build:modules' 'yarn types'",
    "build:modules": "tsdx build --format cjs,esm,umd",
    "dev": "cd ../test-app && yarn start",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:eslint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "lint:prettier": "prettier --check \"src/**/*.{ts,tsx}\" *.js",
    "lint:prettier:fix": "prettier --write \"src/**/*.{ts,tsx}\" *.js",
    "prepublishOnly": "yarn build",
    "start": "tsdx watch",
    "test": "tsdx test",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "types": "tsc --project tsconfig.json --emitDeclarationOnly"
  },
  "dependencies": {
    "@stacks/connect": "7.2.0",
    "jsontokens": "^4.0.1"
  },
  "devDependencies": {
    "@types/react-dom": "^17.0.2",
    "@types/styled-components": "^5.1.9",
    "bundlesize": "^0.18.1",
    "concurrently": "^6.0.0",
    "esbuild": "^0.9.3",
    "prettier": "^2.2.1",
    "rollup": "^2.41.4",
    "rollup-plugin-esbuild": "^3.0.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "typings": "dist/types/index.d.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typedoc": {
    "entryPoint": "./src/index.ts"
  },
  "bundlesize": [
    {
      "path": "./dist/**/*.js",
      "maxSize": "9 kB"
    }
  ],
  "peerDependencies": {
    "@stacks/connect": "7.2.0",
    "react": "^16.x || 17.x || 18.x",
    "react-dom": "^16.x || 17.x || 18.x"
  }
}
